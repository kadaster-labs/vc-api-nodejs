{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "overrides": [
    {
      "files": ["**/*.js"]
    }
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "func-names": ["error", "never"],
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      {
        "pattern": {
          "js": "always",
          "json": "never"
        }
      }
    ],
    "no-console": "off"
  }
}
