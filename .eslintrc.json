{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "overrides": [
    {
      "files": [
        "**/*.js"
      ]
    }
  ],
  "parser": "@babel/eslint-parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "requireConfigFile": false,
    "babelOptions": {
      "plugins": [
        "@babel/plugin-syntax-import-assertions"
      ]
    }
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "func-names": [
      "error",
      "never"
    ],
    "import/prefer-default-export": "off",
    "import/extensions": [
      "error",
      {
        "pattern": {
          "js": "always",
          "json": "always"
        }
      }
    ],
    "no-console": "off"
  }
}
